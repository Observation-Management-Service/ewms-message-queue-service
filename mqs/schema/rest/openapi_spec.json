                    "$ref": "#/components/parameters/WorkflowIDParam"
                }
            ],
            "post": {
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "criteria": {
                                    "$ref": "#/components/schemas/MQGroupObject/properties/criteria"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "an activated group of queues",
